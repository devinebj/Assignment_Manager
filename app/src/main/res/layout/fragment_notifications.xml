<?xml version="1.0" encoding="utf-8"?>
<ScrollView xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="vertical"
        android:padding="16dp">

        <!-- Page Title -->
        <TextView
            android:id="@+id/notification_page_label"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="Notifications"
            android:textAppearance="?attr/textAppearanceHeadline6"
            android:gravity="center" />

        <!-- Coming Up Section Label -->
        <TextView
            android:id="@+id/coming_up_label"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="Coming Up"
            android:textAppearance="?attr/textAppearanceHeadline6"
            android:paddingTop="16dp" />

        <!-- Divider for Coming Up Section -->
        <View
            android:id="@+id/coming_up_divider"
            android:layout_width="match_parent"
            android:layout_height="1dp"
            android:background="@android:color/darker_gray"
            android:layout_marginTop="8dp" />

        <!-- Coming Up RecyclerView -->
        <androidx.recyclerview.widget.RecyclerView
            android:id="@+id/coming_up_rv"
            android:layout_width="match_parent"
            android:layout_height="wrap_content" />

        <!-- Placeholder Text for Coming Up Section -->
        <TextView
            android:id="@+id/coming_up_placeholder"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="No upcoming assignments"
            android:gravity="center"
            android:visibility="gone" />

        <!-- Past Due Section Label -->
        <TextView
            android:id="@+id/past_due_label"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="Past Due"
            android:textAppearance="?attr/textAppearanceHeadline6"
            android:paddingTop="16dp" />

        <!-- Divider for Past Due Section -->
        <View
            android:id="@+id/past_due_divider"
            android:layout_width="match_parent"
            android:layout_height="1dp"
            android:background="@android:color/darker_gray"
            android:layout_marginTop="8dp" />

        <!-- Past Due RecyclerView -->
        <androidx.recyclerview.widget.RecyclerView
            android:id="@+id/past_due_rv"
            android:layout_width="match_parent"
            android:layout_height="wrap_content" />

        <!-- Placeholder Text for Past Due Section -->
        <TextView
            android:id="@+id/past_due_placeholder"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="No past due assignments"
            android:gravity="center"
            android:visibility="gone" />

    </LinearLayout>
</ScrollView>
