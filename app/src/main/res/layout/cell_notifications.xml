<?xml version="1.0" encoding="utf-8"?>
<LinearLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:orientation="vertical"
    android:padding="16dp"
    android:background="@color/white"
    android:elevation="2dp">

    <!-- Assignment Name -->
    <TextView
        android:id="@+id/tv_assignment_name"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="Assignment Name"
        android:textSize="18sp"
        android:textStyle="bold"
        android:textColor="@color/black"
        android:layout_marginBottom="8dp"/>

    <!-- Horizontal layout for Course and Points Possible -->
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal">

        <TextView
            android:id="@+id/tv_course_name"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_weight="1"
            android:text="Course Name"
            android:textSize="16sp"
            android:textColor="@color/black" />

        <TextView
            android:id="@+id/tv_points_possible"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_weight="1"
            android:text="Points: 100"
            android:textSize="16sp"
            android:textColor="@color/black"
            android:gravity="end"/>
    </LinearLayout>

    <!-- Horizontal layout for Grade Weight and Due Date -->
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal"
        android:layout_marginTop="8dp">

        <TextView
            android:id="@+id/tv_grade_weight"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_weight="1"
            android:text="Weight: 20%"
            android:textSize="14sp"
            android:textColor="@color/gray" />

        <TextView
            android:id="@+id/tv_due_date"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_weight="1"
            android:text="Due: January 1, 2025"
            android:textSize="14sp"
            android:textColor="@color/red"
            android:gravity="end"/>
    </LinearLayout>

</LinearLayout>
